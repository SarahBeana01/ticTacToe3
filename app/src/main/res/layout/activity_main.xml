<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:id="@+id/game_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@color/black"
        android:columnCount="3"
        android:rowCount="3"
        android:scaleX="1"
        android:scaleY="1"
        android:useDefaultMargins="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ticatac_xicon"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton3"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton4"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton5"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton6"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ticatac_oicon_round"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton7"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton8"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton9"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

        <ImageButton
            android:id="@+id/imageButton10"
            style="@style/SquareButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:contentDescription="@string/empty" />

    </GridLayout>

    <Button
        android:id="@+id/new_game_button"
        style="@style/GameOptionButton"
        android:layout_marginTop="100dp"
        android:onClick="onNewGameClick"
        android:text="@string/new_game"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_grid" />

    <Button
        android:id="@+id/help_button"
        style="@style/GameOptionButton"
        android:layout_marginTop="92dp"
        android:text="@string/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_game_button" />

    <TextView
        android:id="@+id/current_turn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="@string/x_turn"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/new_game_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>